---
import DefaultLayout from '../layouts/DefaultLayout.astro'
import Hero from '../components/Hero.astro'
import Feature from '../components/Feature.astro'
import Counter from '../components/Counter.astro'
import ContentMedia from '../components/ContentMedia.astro'
import Quicklink from '../components/Quicklink.astro'

const res = await fetch('https://acc-directus.sabah.gov.my/items/staff_name');
const jsonData = await res.json();
const displayArray = jsonData.data.map(item => ({
    id: item.id,
    name: item.nama_staff,
    title: item.jawatan || '',
    
  }));

  // console.log(displayArray);


const data=displayArray;





